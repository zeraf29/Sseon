<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:text="[관리 대상 연결]"
        android:textSize="20sp" />

    <Button
        android:id="@+id/set_connect"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="연결" />

    <TextView
        android:id="@+id/set_btstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/set_connect"
        android:layout_margin="5dip"
        android:layout_marginTop="33dp"
        android:paddingLeft="20dip"
        android:text="> 블루투스 상태 : 꺼짐"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/set_cupstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/set_btstatus"
        android:layout_margin="5dip"
        android:paddingLeft="20dip"
        android:text="> 관리 대상 연결상태 : 연결안됨"
        android:textSize="18sp" />

</RelativeLayout>